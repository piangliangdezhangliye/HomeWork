/**index.wxss**/
.index_swiper{
  width: 100%;
}
swiper{
  
  height: 65vw;
  text-align: center;
}

.index_swiper navigator image {
  width: 60%;
}
.goods_detail_pri{
  width: 100%;
  color: red;
  font-size: 36rpx;
  font-weight: 600;
  text-align: left;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.goods_detail{
  display: flex;
}

.goods_name{
  flex: 5;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_collect{
  flex: 1;
  border-left: 1rpx solid #ccc;
  text-align: center;
}
.goods_info_title{
  width: 100%;
  color: red;
  font-size: 36rpx;
  font-weight: 600;
  text-align: left;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin: 20rpx 0;
}