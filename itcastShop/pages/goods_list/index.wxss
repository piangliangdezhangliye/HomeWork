/**index.wxss**/
SearchInput {
  width: 100%;
}

.goods_list{
  width: 100%;
  display: flex;
  height: 200rpx;
  margin-top: 60rpx;
  border-bottom: 3rpx solid #ccc;
}
.goods_list_img{
  flex: 2;
}
.goods_list_img image{
  width: 100%;
  height: 100%;
}
.goods_list_content{
  flex: 5;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.goods_list_title{
  font-size: 26rpx;
}
.goods_list_pic{
  display: block;
  color: red;
  font-size: 36rpx;
  margin-top: 20rpx;
}